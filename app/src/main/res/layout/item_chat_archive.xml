<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_size"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/spacing_normal_16"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_avatar_group"
        android:layout_width="@dimen/avatar_item_size"
        android:layout_height="@dimen/avatar_item_size"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/spacing_normal_16"
        android:src="@drawable/ic_archive_black_24dp"
        android:background="#9CA9BA"

        />


    <TextView
        android:id="@+id/tv_title_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Архив чатов"
        android:textColor="@color/color_primary"
        android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        android:layout_toRightOf="@id/iv_avatar_group"
        android:layout_marginRight="@dimen/spacing_tiny_4"
        android:maxLines="1"
        />

    <TextView
        android:id="@+id/tv_message_author_archive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="\@John Doe"
        android:textColor="@color/color_gray_dark"
        android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        android:layout_toRightOf="@id/iv_avatar_group"
        android:layout_marginRight="@dimen/spacing_tiny_4"
        android:layout_below="@+id/tv_title_group"
        />

    <TextView
        android:id="@+id/tv_message_archive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="текст"
        android:textColor="@color/color_gray_dark"
        android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        android:layout_toRightOf="@id/tv_message_author_archive"
        android:layout_toLeftOf="@id/tv_counter_archive"
        android:layout_marginRight="@dimen/spacing_normal_16"
        android:layout_below="@id/tv_title_group"
        />
    <TextView
        android:id="@+id/tv_date_archive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/color_gray_dark"
        tools:text="11"
        />
    <TextView
        android:id="@+id/tv_counter_archive"
        android:layout_width="@dimen/counter_size"
        android:minHeight="@dimen/counter_size"
        android:layout_height="@dimen/counter_size"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textSize="10sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_counter"
        tools:text="11"
        />

</RelativeLayout>